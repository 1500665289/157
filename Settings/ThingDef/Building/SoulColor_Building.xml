	<!-- 魔法阵建筑定义 -->
	<ThingDef Type="Building" Name="SoulColor_MoFaZhen" Parent="ProductionBase">
		<ThingName>魔法阵</ThingName><!-- 显示名称 -->
		<Desc>按一定规则搭建的魔法阵，可以生产物品、存储灵气、与使用特定魔法。</Desc><!-- 描述 -->
		<TexPath>Spr/Object/wuquan01.png</TexPath><!-- 纹理路径 -->
		<TexScale>0.4</TexScale><!-- 纹理缩放比例 -->
		<SelectAble>1</SelectAble><!-- 可选择 -->
		<ClassName>MoFaZhen_Building</ClassName><!-- 类名 -->
		<CastShadow>0</CastShadow><!-- 是否投射阴影：0-否 -->
		<BlockMissile>1</BlockMissile><!-- 是否阻挡抛射物：1-是 -->
		<Beauty>100</Beauty><!-- 美观度 -->
		<BlockLight>0</BlockLight><!-- 是否阻挡光线：0-否 -->
		<MaxHitPoints>100</MaxHitPoints><!-- 最大生命值 -->
		<ColliderKind>None</ColliderKind><!-- 碰撞体类型：无 -->
		<VisionRadius>0</VisionRadius><!-- 视野半径 -->
		
		<Flammability><!-- 可燃性 -->
			<Flammability>-1</Flammability><!-- -1表示不可燃 -->
		</Flammability>
		
		<Collider><!-- 碰撞体设置 -->
			<Data>
			[6],<!-- 碰撞数据 -->
			</Data>
			<WorkOffset><!-- 工作偏移点 -->
				<li Index="0" X="0" Y="0" Ang="1"/>
			</WorkOffset>
		</Collider>
		
		<Light><!-- 光照设置 -->
			<Value>40</Value><!-- 光照强度 -->
			<Failing>0.6</Failing><!-- 衰减系数 -->
			<FailRadius>5</FailRadius><!-- 衰减半径 -->
			<Radius>10</Radius><!-- 光照半径 -->
			<Color>FFDEBCFF</Color><!-- 光照颜色 -->
		</Light>
		
		<Building><!-- 建筑属性 -->
			<RoomKind>None</RoomKind><!-- 房间类型：无 -->
			<ShowFree>0</ShowFree><!-- 显示空闲状态 -->
			<TerrainAffordanceNeeded>Ground</TerrainAffordanceNeeded><!-- 需要的地形：地面 -->
			<CanMakeRoom>0</CanMakeRoom><!-- 能否构成房间 -->
			<WorkAnimation>produce</WorkAnimation><!-- 工作动画：生产 -->
			<BePackage>1</BePackage><!-- 是否为包裹 -->
			<NoFengshui>1</NoFengshui><!-- 不影响风水 -->
			<NoFight>1</NoFight><!-- 非战斗建筑 -->
			<BeMade><!-- 制作要求 -->
				<WorkToMake>200</WorkToMake><!-- 制作所需工作量：原100 → 200 -->
				<Quality>0</Quality><!-- 品质 -->
				<StuffCategories><!-- 可用材料类别 -->
					<Stuff name="MetalBlock"/><!-- 金属砖 -->
					<Stuff name="WoodBlock"/><!-- 木砖 -->
					<Stuff name="RockBlock"/><!-- 石砖 -->
				</StuffCategories>
				<CostStuffCount>10</CostStuffCount><!-- 消耗材料数量：原1 → 10 -->
			</BeMade>
			<SnowRenderData><!-- 雪渲染数据 -->
				<x>3.3</x>
				<y>4</y>
				<z>1</z>
			</SnowRenderData>
			<ProducePriority>1</ProducePriority><!-- 生产优先级 -->
			<ProduceKind>Handwork</ProduceKind><!-- 生产类型：手工作业 -->
			<Produces><!-- 可生产物品列表 -->
				<Produce>
					<ThingDef>SoulColor_Sword_GuiRen</ThingDef><!-- 物品定义 -->
					<Display>聚灵剑</Display><!-- 显示名称 -->
					<Count>1</Count><!-- 生产数量 -->
				</Produce>
				<!-- 其他可生产物品... -->
			</Produces>
		</Building>
		<StoryBnts><!-- 故事按钮 -->
			<li Name="开启" Desc="开启魔法阵" Appoint="3" Story="SoulColor_MoFaZhen" Cost="5"/>
		</StoryBnts>
	</ThingDef>
	
